@using Microsoft.EntityFrameworkCore.Storage
@using Kidregs.Libraries.Class
<!DOCTYPE html>
<html lang="cn">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="广西大学幼儿园" name="description" />
    <meta content="Eric" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="/images/favicon.ico">
    <title>@ViewData["Title"] - @ViewBag.SystemOptions.SiteName</title>

    @RenderSection("PluginsCSS")

    <!-- App css -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/app.min.css" rel="stylesheet" type="text/css" />

</head>

<body>
    <!-- Navigation Bar-->
    <header id="topnav">
        <!-- Topbar Start -->
        <div class="navbar-custom">
            <div class="container-fluid">
                <ul class="list-unstyled topnav-menu float-right mb-0">
                    <li class="dropdown notification-list">
                        <!-- Mobile menu toggle-->
                        <a class="navbar-toggle nav-link">
                            <div class="lines">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                        </a>
                        <!-- End mobile menu toggle-->
                    </li>

                    <li class="dropdown notification-list">
                        <a class="nav-link dropdown-toggle nav-user mr-0 waves-effect waves-light"
                           data-toggle="dropdown"
                           href="#"
                           role="button"
                           aria-haspopup="false"
                           aria-expanded="false">
                            <span class="ml-1">
                                Hi! @User.Identity.Name<i class="mdi mdi-chevron-down"></i>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right profile-dropdown">
                            <!-- item-->
                            <div class="dropdown-header noti-title">
                                <h6 class="text-overflow m-0">欢迎您 !</h6>
                            </div>

                            <!-- item-->
                            <a href="@Url.Action("Reset","Admin")" class="dropdown-item notify-item">
                                <i class="fe-user"></i>
                                <span>修改密码</span>
                            </a>

                            <div class="dropdown-divider"></div>

                            <!-- item-->
                            <a href="@Url.Action("Signout","Admin")" class="dropdown-item notify-item">
                                <i class="fe-log-out"></i>
                                <span>退出</span>
                            </a>
                        </div>
                    </li>
                </ul>

                <!-- LOGO -->
                <div class="logo-box">
                    <a href="index.html" class="logo text-center">
                        <span class="logo-lg">
                            <img src="/images/logo-light.png" alt="" height="16" />
                            <!-- <span class="logo-lg-text-light">UBold</span> -->
                        </span>
                        <span class="logo-sm">
                            <!-- <span class="logo-sm-text-dark">U</span> -->
                            <img src="/images/logo-sm.png" alt="" height="24" />
                        </span>
                    </a>
                </div>
            </div>
            <!-- end container-fluid-->
        </div>
        <!-- end Topbar -->

        <div class="topbar-menu">
            <div class="container-fluid">
                <div id="navigation">
                    <!-- Navigation Menu-->
                    <ul class="navigation-menu">
                        <li class="has-submenu">
                            <a href="@Url.Action("Index","Dashboard")"><i class="fe-airplay"></i>数据总览</a>
                        </li>

                        <li class="has-submenu">
                            <a href="@Url.Action("Settings","Dashboard")"><i class="fe-briefcase"></i>系统设置</a>
                        </li>
                    </ul>
                    <!-- End navigation menu -->

                    <div class="clearfix"></div>
                </div>
                <!-- end #navigation -->
            </div>
            <!-- end container -->
        </div>
        <!-- end navbar-custom -->
    </header>
<!-- End Navigation Bar-->

    <!-- End Navigation Bar-->
    <!--==============================================================-->
    <!-- Start Page Content here -->
    <!--==============================================================-->
    @RenderBody()

    <!-- end wrapper -->
    <!--==============================================================-->
    <!-- End Page content -->
    <!--==============================================================-->
    <!-- Footer Start -->
    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-center">
                    @ViewBag.SystemOptions.CopyrightMessage
                </div>
            </div>
        </div>
    </footer>
    <!-- end Footer -->
    <!-- Vendor js -->
    <script src="/js/vendor.min.js"></script>

    @RenderSection("PluginsJS", false)

    @RenderSection("InitJS", false)

    <!-- App js -->
    <script src="/js/app.min.js"></script>

    @RenderSection("CustomizeJS", false)
    @RenderSection("CustomizeCSS", false)
</body>
</html>
