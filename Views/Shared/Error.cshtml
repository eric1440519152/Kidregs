@{
    ViewData["Title"] = "错误";
}

<!DOCTYPE html>
<html lang="cn">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - @ViewBag.SystemOptions.SiteName</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="幼儿园新生信息采集系统" name="description" />
    <meta content="He Zeen" name="author" />
    <meta content="Coderthemes" name="Theme From" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="/images/favicon.ico">

    <!-- App css -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/app.min.css" rel="stylesheet" type="text/css" />

</head>

<body class="authentication-bg bg-gradient">

    <div class="pt-5 mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-pattern">

                        <div class="card-body p-4">

                            <div class="text-center w-75 m-auto">
                                <a href="index.html">
                                    <span><img src="/images/logo-dark.png" alt="" height="18"></span>
                                </a>
                            </div>
                            <div class="text-center mt-3 pt-1">
                                <h1 class="text-error">@ViewBag.errorCode</h1>
                                <h3 class="text-uppercase text-danger mt-3 mb-0">Oops!错误</h3>
                                <p class="text-muted mt-3">
                                    试一试刷新？或者联系支持人员
                                    <a class="btn btn-md btn-block btn-gradient waves-effect waves-light mt-3" href="@Url.Action("Index","Home")">回到主页</a>
                            </div>


                        </div>

                    </div> <!-- end card-body -->
                </div>
                <!-- end card -->

            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
    
    <!-- end page -->
    <!-- Vendor js -->
    <script src="/js/vendor.min.js"></script>

    <!-- App js -->
    <script src="/js/app.min.js"></script>

</body>
</html>
