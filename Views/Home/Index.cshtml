@model List<Kidregs.ViewModels.Home.KidsInfoViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">学生信息导出Demo</h1>
    <p>以下数据均为数据库中原有数据，Demo不包含数据添加功能</p>
</div>
<div class="text-center">
    <table width="100%" border="1">
        <col align="left" />
        <col align="left" />
        <col align="right" />
        <tr>
            <th>ID</th>
            <th>姓名</th>
            <th>身份证号</th>
            <th>性别</th>
            <th>生日</th>
            <th>父亲姓名</th>
            <th>母亲姓名</th>
            <th>操作</th>
        </tr>
        @foreach (var unit in Model)
        {
            <tr>
                <td>@unit.Id</td>
                <td>@unit.Name</td>
                <td>@unit.IdCard</td>
                <td>@unit.Gender</td>
                <td>@unit.Birth</td>
                <td>@unit.FatherName</td>
                <td>@unit.MotherName</td>
                <td>
                    <a asp-controller="Home" asp-action="Output" asp-route-id="@unit.Id">导出为Word</a>
                </td>
            </tr>
        }
    </table>
</div>
