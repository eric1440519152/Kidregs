@model Kidregs.ViewModels.Home.RegViewModel
@{
    ViewData["Title"] = "登记信息";
    Layout = "_HomeLayout";
}
@section PluginsCSS{
    <!-- Jquery Toast css -->
    <link href="/libs/bootstrap-tagsinput/bootstrap-tagsinput.css" rel="stylesheet" />
    <link href="/libs/jquery-toast/jquery.toast.min.css" rel="stylesheet" type="text/css" />
    <link href="/libs/select2/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="/libs/bootstrap-timepicker/bootstrap-timepicker.min.css" rel="stylesheet" type="text/css" />
    <link href="/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
}

<div class="wrapper" style="padding-top: 70px;">
    <div class="container-fluid">
        <!-- sample modal content -->
        @if (ViewBag.SystemOptions.WelcomeMessage != null)
        {
            <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            <h4 class="modal-title" id="myModalLabel">填写须知</h4>
                        </div>
                        <div class="modal-body">
                            <h5>重要须知</h5>
                            <p>您在填写前请仔细阅读以下内容，避免错误操作浪费您的宝贵时间</p>
                            <p>@ViewBag.SystemOptions.WelcomeMessage</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary waves-effect waves-light"
                                    data-dismiss="modal">
                                我已仔细阅读
                            </button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        }
        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item">
                                <a href="javascript: void(0);">
                                    @ViewBag.SystemOptions.SiteName
                                </a>
                            </li>
                            <li class="breadcrumb-item active">
                                <a href="javascript: void(0);">
                                    新生登记报名
                                </a>
                            </li>
                        </ol>
                    </div>
                    <h4 class="page-title">
                        新生信息采集页
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->
        <!-- Basic Form Wizard -->
        <div hidden="hidden" id="errString">
            @Model.errMessage
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card-box">
                    <h4 class="header-title"><b>新生基本信息表</b></h4>
                    <p class="sub-header">
                        请您认真仔细填写，每次您单击 “下一步” 时，我们会检验您的输入格式是否有误.<br />
                        <strong>最终提交前，请您核对信息是否有误.在最后一页单击 “提交” 后，您无法再修改信息.</strong>
                    </p>

                    <form id="basic-form" asp-action="RegInfo">

                        <div>
                            <h3>幼儿基本信息</h3>
                            <section>
                                <div class="row">
                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label class="control-label" for="KidName">幼儿姓名 *</label>
                                            <input class="form-control" asp-for="KidName" id="KidName" name="KidName" type="text"
                                                   data-parsley-group="section-0"
                                                   data-parsley-required-message="请输入幼儿姓名" required>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label " for="KidBirth">出生日期 *</label>
                                            <div class="">
                                                <input class="form-control" asp-for="KidBirth" type="date" id="KidBirth" name="KidBirth" required
                                                       data-parsley-group="section-0"
                                                       data-parsley-required-message="请填写出生日期">
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label " for="KidIdCard">身份证号 *</label>
                                            <div class="">
                                                <input class="form-control" asp-for="KidIdCard" data-parsley-remote="@Url.Action("ValidIdCard", "Valid")" id="KidIdCard" type="text" name="KidIdCard" required
                                                       data-parsley-group="section-0" maxlength="18"
                                                       data-parsley-pattern="[1-9]\d{5}(18|19|20|(3\d))\d{2}((0[1-9])|(1[0-2]))(([0-2][1-9])|10|20|30|31)\d{3}[0-9Xx]"
                                                       data-parsley-required-message="请填写身份号码"
                                                       data-parsley-remote-message="该身份号已经存在记录，无法再次登记"
                                                       data-parsley-pattern-message="请输入正确的身份证号码">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group clearfix">
                                            <label class="control-label " for="KidNation">民族 *</label>
                                            <div class="">
                                                <select class="form-control select2" id="KidNation" required
                                                        asp-for="KidNation"
                                                        data-parsley-group="section-0"
                                                        data-parsley-required-message="请选择民族">
                                                    <option value="">请选择</option>
                                                    @foreach (var unit in ViewBag.nationLists)
                                                    {
                                                        <option value="@unit.Nation">@unit.Nation</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label">性别 *</label>
                                            <div class="">
                                                <div class="radio radio-info form-check-inline">
                                                    <input type="radio" asp-for="KidGender" id="male" value="男"
                                                           data-parsley-group="section-0" name="KidGender" required
                                                           checked>
                                                    <label for="male"> 男 </label>
                                                </div>
                                                <div class="radio radio-danger form-check-inline">
                                                    <input type="radio" asp-for="KidGender" id="female" value="女"
                                                           data-parsley-group="section-0" name="KidGender">
                                                    <label for="female"> 女 </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label ">户口性质 *</label>
                                            <div class="">
                                                <div class="radio radio-info form-check-inline">
                                                    <input type="radio" asp-for="KidHouseholdType" id="feinongye" value="非农业户口"
                                                           data-parsley-group="section-0" name="KidHouseholdType"
                                                           required checked>
                                                    <label for="feinongye"> 非农业户口 </label>
                                                </div>
                                                <div class="radio radio-danger form-check-inline">
                                                    <input type="radio" asp-for="KidHouseholdType" id="nongye" value="农业户口"
                                                           data-parsley-group="section-0" name="KidHouseholdType">
                                                    <label for="nongye"> 农业户口 </label>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label" for="KidRegRes">户口所在地（户口簿上派出所印章） *</label>
                                            <input class="form-control" id="KidRegRes" asp-for="KidRegRes" name="KidRegRes" type="text"
                                                   data-parsley-group="section-0"
                                                   data-parsley-required-message="请输入户口所在地" required>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label" for="KidDomicile">户籍所在地（户口簿首页地址） *</label>
                                            <input class="form-control" id="KidDomicile" asp-for="KidDomicile" name="KidDomicile" type="text"
                                                   data-parsley-group="section-0"
                                                   data-parsley-required-message="请输入户籍所在地" required>
                                        </div>

                                        <div class="form-group clearfix">
                                            <label class="control-label ">(*) 必填</label>
                                        </div>

                                    </div>
                                </div>


                            </section>
                            <h3>家庭信息</h3>
                            <section>
                                <div class="row">
                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label class="control-label" for="DadName">父亲姓名 *</label>
                                            <input class="form-control" id="DadName" asp-for="DadName" name="DadName" type="text"
                                                   data-parsley-group="section-1"
                                                   data-parsley-required-message="请输入父亲姓名" required>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label " for="DadWorkRes">父亲工作单位 *</label>
                                            <div class="">
                                                <input class="form-control" type="text" id="DadWorkRes" asp-for="DadWorkRes" name="DadWorkRes"
                                                       required data-parsley-group="section-1"
                                                       data-parsley-required-message="请填写工作单位">
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label " for="DadPhone">父亲联系电话 *</label>
                                            <div class="">
                                                <input class="form-control" type="phone" asp-for="DadPhone" name="DadPhone" id="DadPhone"
                                                       required data-parsley-group="section-1"
                                                       data-parsley-pattern="1([358][0-9]|4[579]|66|7[0135678]|9[89])[0-9]{8}"
                                                       data-parsley-pattern-message="请输入正确的手机号码"
                                                       data-parsley-required-message="请填写父亲联系电话">
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label " for="DadIdCard">父亲身份证号 *</label>
                                            <div class="">
                                                <input class="form-control" type="text" id="DadIdCard" asp-for="DadIdCard" name="DadIdCard" required
                                                       data-parsley-group="section-1" maxlength="18"
                                                       data-parsley-pattern="[1-9]\d{5}(18|19|20|(3\d))\d{2}((0[1-9])|(1[0-2]))(([0-2][1-9])|10|20|30|31)\d{3}[0-9Xx]"
                                                       data-parsley-required-message="请填写身份号码"
                                                       data-parsley-pattern-message="请输入正确的身份证号码">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label" for="MunName">母亲姓名 *</label>
                                            <input class="form-control" id="MunName" asp-for="MunName" name="MunName" type="text"
                                                   data-parsley-group="section-1"
                                                   data-parsley-required-message="请输入母亲姓名" required>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label " for="MunWorkRes">母亲工作单位 *</label>
                                            <div class="">
                                                <input class="form-control" type="text" asp-for="MunWorkRes" id="MunWorkRes" name="MunWorkRes"
                                                       required data-parsley-group="section-1"
                                                       data-parsley-required-message="请填写工作单位">
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label " for="MunPhone">母亲联系电话 *</label>
                                            <div class="">
                                                <input class="form-control" type="phone" id="MunPhone" asp-for="MunPhone" name="MunPhone"
                                                       required data-parsley-group="section-1"
                                                       data-parsley-pattern="1([358][0-9]|4[579]|66|7[0135678]|9[89])[0-9]{8}"
                                                       data-parsley-pattern-message="请输入正确的手机号码"
                                                       data-parsley-required-message="请填写母亲联系电话">
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label " for="MunIdCard">母亲身份证号 *</label>
                                            <div class="">
                                                <input class="form-control" type="text" asp-for="MunIdCard" id="MunIdCard" name="MunIdCard" required
                                                       data-parsley-group="section-1" maxlength="18"
                                                       data-parsley-pattern="[1-9]\d{5}(18|19|20|(3\d))\d{2}((0[1-9])|(1[0-2]))(([0-2][1-9])|10|20|30|31)\d{3}[0-9Xx]"
                                                       data-parsley-required-message="请填写身份号码"
                                                       data-parsley-pattern-message="请输入正确的身份证号码">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label" for="HomeAddres">家庭住址 *</label>
                                            <input class="form-control" id="HomeAddres" asp-for="HomeAddres" name="HomeAddres" type="text"
                                                   data-parsley-group="section-1"
                                                   data-parsley-required-message="请输入家庭住址" required>
                                        </div>
                                        <div class="alert alert-primary bg-primary text-white border-0 alert-dismissible fade show"
                                             role="alert">
                                            如果报读幼童为西大在编祖辈的孙辈，则以下信息必填，否则以下信息不是必须的
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label" for="GrandName">祖辈姓名 ※</label>
                                            <input class="form-control" id="GrandName" asp-for="GrandName" name="GrandName" type="text"
                                                   data-parsley-group="section-1"
                                                   data-parsley-required-message="请输入祖辈姓名">
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label " for="GrandWorkRes">祖辈工作单位 ※</label>
                                            <div class="">
                                                <input class="form-control" type="text" asp-for="GrandWorkRes" id="GrandWorkRes" name="GrandWorkRes"
                                                       data-parsley-group="section-1"
                                                       data-parsley-required-message="请填写祖辈工作单位">
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label " for="GrandPhone">祖辈联系电话 ※</label>
                                            <div class="">
                                                <input class="form-control" type="text" id="GrandPhone" asp-for="GrandPhone" name="GrandPhone"
                                                       data-parsley-group="section-1"
                                                       data-parsley-pattern="1([358][0-9]|4[579]|66|7[0135678]|9[89])[0-9]{8}"
                                                       data-parsley-pattern-message="请输入正确的手机号码"
                                                       data-parsley-required-message="请填写联系电话">
                                            </div>
                                        </div>

                                        <div class="form-group clearfix">
                                            <label class="control-label ">(*) 必填 (※)在编祖辈孙辈入学必填</label>
                                        </div>

                                    </div>
                                </div>
                            </section>
                            <h3>幼儿生活、健康情况调查</h3>
                            <section>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group clearfix">
                                            <label class="control-label ">是否爱提问 *</label>
                                            <div class="">
                                                <div class="radio radio-info form-check-inline">
                                                    <input type="radio" id="LikeAskY" asp-for="LikeAsk" value="是"
                                                           data-parsley-group="section-2" name="LikeAsk" required
                                                           checked>
                                                    <label for="LikeAskY"> 是 </label>
                                                </div>
                                                <div class="radio radio-danger form-check-inline">
                                                    <input type="radio" id="LikeAskN" asp-for="LikeAsk" value="否"
                                                           data-parsley-group="section-2" name="LikeAsk">
                                                    <label for="LikeAskN"> 否 </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label ">是否独立饮食 *</label>
                                            <div class="">
                                                <div class="radio radio-info form-check-inline">
                                                    <input type="radio" id="IndieEatY" value="是"
                                                           data-parsley-group="section-2" asp-for="IndieEat" name="IndieEat" required
                                                           checked>
                                                    <label for="IndieEatY"> 是 </label>
                                                </div>
                                                <div class="radio radio-danger form-check-inline">
                                                    <input type="radio" id="IndieEatN" asp-for="IndieEat" value="否"
                                                           data-parsley-group="section-2" name="IndieEat">
                                                    <label for="IndieEatN"> 否 </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label">是否喜欢与同伴一起玩 *</label>
                                            <div class="">
                                                <div class="radio radio-info form-check-inline">
                                                    <input type="radio" id="LikePlayY" value="是"
                                                           data-parsley-group="section-2" asp-for="LikePlay" name="LikePlay" required
                                                           checked>
                                                    <label for="LikePlayY"> 是 </label>
                                                </div>
                                                <div class="radio radio-danger form-check-inline">
                                                    <input type="radio" id="LikePlayN" value="否"
                                                           data-parsley-group="section-2" asp-for="LikePlay" name="LikePlay">
                                                    <label for="LikePlayN"> 否 </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label">是否喜欢与父母、他人交流 *</label>
                                            <div class="">
                                                <div class="radio radio-info form-check-inline">
                                                    <input type="radio" id="LikeCommY" value="是"
                                                           data-parsley-group="section-2" asp-for="LikeComm" name="LikeComm" required
                                                           checked>
                                                    <label for="LikeCommY"> 是 </label>
                                                </div>
                                                <div class="radio radio-danger form-check-inline">
                                                    <input type="radio" id="LikeCommN" value="否"
                                                           data-parsley-group="section-2" asp-for="LikeComm" name="LikeComm">
                                                    <label for="LikeCommN"> 否 </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group clearfix">
                                            <label class="control-label">是否爱看图书 *</label>
                                            <div class="">
                                                <div class="radio radio-info form-check-inline">
                                                    <input type="radio" id="male" value="是"
                                                           data-parsley-group="section-2" id="LikeReadY" asp-for="LikeRead" name="LikeRead" required
                                                           checked>
                                                    <label for="LikeReadY"> 是 </label>
                                                </div>
                                                <div class="radio radio-danger form-check-inline">
                                                    <input type="radio" id="female" value="否"
                                                           data-parsley-group="section-2" id="LikeReadN" asp-for="LikeRead" name="LikeRead">
                                                    <label for="LikeReadN"> 否 </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="control-label ">是否有午睡的习惯 *</label>
                                            <div class="">
                                                <div class="radio radio-info form-check-inline">
                                                    <input type="radio" id="NapY" asp-for="Nap" value="是"
                                                           data-parsley-group="section-2" name="Nap" required
                                                           checked>
                                                    <label for="NapY"> 是 </label>
                                                </div>
                                                <div class="radio radio-danger form-check-inline">
                                                    <input type="radio" id="NapN" value="否"
                                                           data-parsley-group="section-2" asp-for="Nap" name="Nap">
