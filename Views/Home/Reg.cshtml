}
@section InitJS
{
    <!-- Init js-->
    <script src="/js/pages/form-validation.init.js"></script>
    <script src="/js/pages/wizard-init.js"></script>
    <script src="/js/pages/form-advanced.init.js"></script>
    <script src="/js/pages/toastr.init.js"></script>
    <script src="/js/pages/form-pickers.init.js"></script>
}
@section CustomizeJS
{

    @if (ViewBag.SystemOptions.reCAPTCHASwitch)
    {
        <script>
            //谷歌验证码回调函数
            function reCaptchaCallback(token) {
                $("#reCAPTCHA_Token").val(token);
            }
        </script>
    }

    @if (Model.errMessage != null)
    {
        <script type="text/javascript">
            $(function () {
                Swal.fire({
                    title: "遇到错误!",
                    text: $("#errString").text(),
                    type: "error",
                    confirmButtonText: "我知道了",
                    confirmButtonClass: "btn btn-confirm mt-2",
                });
            });
        </script>
    }
    else if(ViewBag.SystemOptions.WelcomeMessage != null)
    {
        <script type="text/javascript">
            $(function () {
                $('#myModal').modal();
            });
        </script>
    }
}
@section CustomizeCSS{
    <style type="text/css">
        .parsley-errors-list > li {
            list-style: none;
            color: #f36270;
            margin-top: 5px;
            padding-left: 20px !important;
            position: relative;
        }

        .parsley-error {
            border-color: #f36270 !important;
        }

        .wizard > .steps .error a,
        .wizard > .steps .error a:active,
        .wizard > .steps .error a:hover {
            background: #f36270;
            color: #fff;
            border-color: #fde7e9;
        }
    </style>
